
<%=provide(:title," dialects List ")%>
<div class="container">
	<div class="row">

		<%@dialects.each do |dialect| %>
			<div class="col-md-4">
				<div class="panel panel-default" >
					
					<div class=" panel-heading-dialect">
						<h3><%=link_to dialect.dialect_name, language_dialects_path(dialect.id)%></h3>
					</div>
					<div class="panel-body">
						<p><%= dialect.description.truncate(45) %></p>
						
						<%= link_to 'read more...', language_dialects_path(dialect.id),class:"btn-sm btn-default"%>
					</div>
				</dive>
			
			</div>
			
		<%end%>
	
	</div>

</div>
